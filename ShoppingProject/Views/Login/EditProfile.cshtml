
@{
    ViewBag.Title = "EditProfile";
}

<link href="~/Content/css/profileuser.css" rel="stylesheet" />

@if (Session["UserID"] != null)
{

    <img class="bgprofile1" src="~/lib/images/bgprofile1.png" />
    <img class="bgprofile2" src="~/lib/images/bgprofile2.png" />
    <div class="container"  style="margin-top: 10%">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="card1">
                    <div class="container">
                        <center>
                            <p class="profilenamecard1">Hello : @Session["UserName"]</p><br />
                            <a href="/Login/Profile" class="profilelink">ข้อมูลส่วนตัว</a><br /><br /><br />
                            <a href="/Login/History" class="profilelink">รายการสั่งซื้อ</a><br /><br /><br />
                            <a href="/Login/Logout" class="profilelink">ออกจากระบบ</a><br />

                        </center>
                    </div>
                </div>
            </div>

            <div class="col-9">
                <div class="card2">
                    <div class="container">
                        <p class="hello">
                            แก้ไขข้อมูลส่วนตัว
                        </p><br />
                        <p class="profilepersonal">
                            ข้อมูลส่วนตัว
                        </p><br /><br />
                        <form >
                            <p class="profilepersonaldetail">
                                ชื่อ-นามสกุล
                            </p>
                            <input type="text" class="inputchangepersonal form-control"  value="@Session["FName"]"/><br /><br />
                            <p class="profilepersonaldetail">
                                เบอร์ติดต่อ
                            </p>
                            <input type="number" class="inputchangepersonal form-control"value="@Session["Phone"]" /><br /><br />
                            <p class="profilepersonaldetail">
                                อีเมล
                            </p>
                            <input type="email" class="inputchangepersonal form-control" value="@Session["Email"]"/><br /><br />
                            <p class="profilepersonaldetail">
                                ที่อยู่
                            </p>
                            <input type="text" class="inputchangepersonal form-control" value="@Session["Email"]" /><br /><br />
                            <p class="profilepersonaldetail">
                                รหัสผ่าน
                            </p>
                            <input type="password" class="inputchangepersonal form-control" value="@Session["Password"]"/><br /><br />
                            <input type="submit" class="submitchangepersonal" value="ยืนยันการแก้ไข" onclick="Finish()" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    function Finish() {
        alert("กรุณารอระบบติดต่อแอดมินเพื่อตรวจสอบ")

    }
</script>