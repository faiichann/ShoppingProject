
@{
    ViewBag.Title = "EditProfile";
}

<link href="~/Content/css/profileuser.css" rel="stylesheet" />

@if (Session["UserID"] != null)
{
   
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="card1">
                    <div class="container">
                        <center>
                            <a href="/Login/Profile" class="profilelink">Hello : @Session["UserName"]</a>
                            <a href="/Login/Profile" class="profilelink">ข้อมูลส่วนตัว</a><br /><br /><br />
                            <a href="/Login/History" class="profilelink">รายการสั่งซื้อ</a><br /><br /><br />
                            <a href="/Login/Logout" class="profilelink">ออกจากระบบ</a><br />

                        </center>
                    </div>
                </div>
            </div>

            <div class="col-9">
                <div class="card2">
                    <div class="container">
                        <p class="hello">
                            Hello,
                        </p>
                        <p class="profilenameID">
                            INEEDSLEEP
                        </p><br />
                        <p class="profilepersonal">
                            ข้อมูลส่วนตัว
                        </p><br /><br />
                        <form>
                            <p class="profilepersonaldetail">
                                วันเกิด
                            </p>
                            <input type="date" class="inputchangepersonal form-control" /><br /><br />
                            <p class="profilepersonaldetail">
                                เบอร์ติดต่อ
                            </p>
                            <input type="number" class="inputchangepersonal form-control" /><br /><br />
                            <p class="profilepersonaldetail">
                                อีเมล
                            </p>
                            <input type="email" class="inputchangepersonal form-control" /><br />
                            <input type="submit" class="submitchangepersonal" value="ยืนยันการแก้ไข" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
