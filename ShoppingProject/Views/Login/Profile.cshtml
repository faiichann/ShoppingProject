
@{
    ViewBag.Title = "Profile";
}
<link href="~/Content/css/profileuser.css" rel="stylesheet" />
@if (Session["UserID"] != null)
{
    <img class="bgprofile1" src="~/lib/images/bgprofile1.png" />
    <img class="bgprofile2" src="~/lib/images/bgprofile2.png" />
    <div class="container" style="margin-top: 10%">
        <div class="row justify-content-center">
            <div class="col-3">
                <div class="card1">
                    <div class="container">
                        <center>
                            <p class="profilenamecard1">Hello :@Session["UserName"]</p><br />
                            <a href="/Login/Profile" class="profilelink">ข้อมูลส่วนตัว</a><br /><br /><br />
                            <a href="/Login/History" class="profilelink">รายการสั่งซื้อ</a><br /><br /><br />
                            <a href="/Login/Logout" class="profilelink">ออกจากระบบ</a><br />

                        </center>
                    </div>
                </div>
            </div>

            <div class="col-9">
                <div class="card2">
                    <div class="container">
                        <p class="hello">
                            Hello,
                        </p>
                        <p class="profilenameID">
                            @Session["UserName"]
                        </p><br />
                        <p class="profilepersonal">
                            ข้อมูลส่วนตัว
                        </p>
                        <a href="/Login/EditProfile" class="profilechangepersonal">
                            แก้ไขข้อมูลส่วนตัว <img class="imgchangepersonal" src="~/lib/images/profilechangepersonal.png" />
                        </a><br /><br />
                        <p class="profilepersonaldetail">
                            เบอร์โทรติดต่อ
                        </p>
                        <p class="profilepersonaldata">
                            @Session["UserPhone"]
                        </p><br /><br />
                        <p class="profilepersonaldetail">
                            อีเมล
                        </p>
                        <p class="profilepersonaldata">
                            @Session["UserEmail"]
                        </p><br /><br />
                        <p class="profilepersonaldetail">
                            ชื่อ-นามสกุล
                        </p>
                        <p class="profilepersonaldata">
                            @Session["FName"]
                        </p><br /><br />
                        <p class="profilepersonaldetail">
                            ที่อยู่
                        </p>
                        <p class="profileAddress">
                            @Session["UserAddress"]
                        </p><br /><br />

                    </div>
                </div>
            </div>
        </div>
    </div>
}