@model IEnumerable<ShoppingProject.ViewModel.CartModel>

@{
    ViewBag.Title = "Order";
    decimal TotalAmount = 0.00M;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />
<link href="~/Content/css/cart.css" rel="stylesheet" />
@if (Session["UserID"] != null)
{

    <div class="container">
        <div class="row">
            <h4 class="topfont text-center colorfont"><i class='fas fa-shopping-cart'></i>&nbsp; ตะกร้าสินค้า</h4>
        </div>
        <br />
        <div class="row">
            <div class="cardcart" style="overflow-x:auto;">
                @using (Html.BeginForm("Bill", "Shop", FormMethod.Post))
                {
                    <table class="deletetable ordertable">
                        <tr class="topic">
                            <th class="intable1 orderth colorfont"></th>
                            <th class="intable1 orderth colorfont" style="width:20%;">รายการ</th>
                            <th class="intable1 orderth colorfont">จำนวน</th>
                            <th class="intable1 orderth colorfont">ราคา</th>
                            <th class="intable1 orderth colorfont">รวมราคา</th>
                            <th class="intable1 orderth"></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            TotalAmount += item.Total;

                            @: <tr>
                                <td class="intable1 orderth colorfont">
                                    <img src="@Url.Content(item.Image)"
                                         class="rounded-circle"
                                         height="60" width="60"
                                         asp-append-version="true" style="align-items:center;" />
                                </td>
                                <td class="intable1 orderth colorfont">@item.ItemName</td>
                                @:<td class="intable1 orderth colorfont">
                                    <input class="numproduct" type="number" name="amount" value="@item.Quantity.ToString(format: "#,##0")" />
                                @:</td>
                                <td class="intable1 orderth colorfont">@item.UnitPrice.ToString(format: "#,##0.00")</td>
                                <td class="intable1 orderth colorfont" style="text-align:right;">@item.Total.ToString(format: "#,##0.00")</td>
                                <td class="intable1 orderth">@Html.ActionLink("Delete", "Delete", "Shop", new { id = item.ItemId, @class = "trash" }, null)</td>

                            @:</tr>
                        }
                        <tr style="border-top:2px solid #ff6a00;">
                            <td colspan="4" style="text-align:right;">
                                <h3>Total Amount</h3>
                            </td>
                            <td style="text-align:right;">
                                <h3>@TotalAmount.ToString(format: "#,##0.00")</h3>
                            </td>
                        </tr>
                    </table>
                    <input type="button" name="Edit" value="Shop" id="btn1AddCart" class="btn btn-primary" />
                    <input type="submit" name="Save" value="Save" id="SaveOrder" class="btn btn-success" onclick="Savedata()" />
                }
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    function Savedata() {
        alert("สั่งซื้อสำเร็จแล้ว")

    }
</script>